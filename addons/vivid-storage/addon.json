{
  "name": "storage",
  "version": "1.0.0",
  "description": "JSON-based key/value persistent storage for project settings and data",
  "author": "Vivid Contributors",
  "license": "MIT",

  "platforms": ["windows", "macos", "linux"],

  "detect_headers": [
    "vivid/storage/storage.h"
  ],

  "include_dirs": ["include"],

  "libraries": {
    "windows": {
      "static": ["vivid-storage.lib"]
    },
    "macos": {
      "static": ["libvivid-storage.a"]
    },
    "linux": {
      "static": ["libvivid-storage.a"]
    }
  },

  "dependencies": {
    "external": {
      "nlohmann_json": {
        "git": "https://github.com/nlohmann/json.git",
        "version": "v3.11.3",
        "description": "JSON for Modern C++ (header-only)"
      }
    }
  }
}
