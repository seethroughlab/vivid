{
  "name": "spout",
  "version": "1.0.0",
  "description": "Spout texture sharing for Windows - share textures with TouchDesigner, Resolume, OBS, etc.",
  "author": "Vivid Contributors",
  "license": "MIT",

  "platforms": ["windows"],

  "detect_headers": [
    "vivid/spout/spout.h"
  ],

  "include_dirs": ["include"],

  "libraries": {
    "windows": {
      "static": ["vivid-spout.lib", "SpoutLibrary.lib"],
      "system": ["opengl32.lib"],
      "runtime": ["SpoutLibrary.dll"]
    }
  },

  "dependencies": {
    "external": {
      "spout2": {
        "git": "https://github.com/leadedge/Spout2.git",
        "description": "Spout2 SDK for Windows texture sharing"
      }
    }
  }
}
