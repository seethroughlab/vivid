{
  "name": "syphon",
  "version": "1.0.0",
  "description": "Syphon texture sharing for macOS - share textures with VDMX, Resolume, OBS, etc.",
  "author": "Vivid Contributors",
  "license": "MIT",

  "platforms": ["macos"],

  "detect_headers": [
    "vivid/syphon/syphon.h"
  ],

  "include_dirs": ["include"],

  "libraries": {
    "macos": {
      "static": ["libvivid-syphon.a"],
      "frameworks": ["Cocoa", "OpenGL", "IOSurface", "Syphon"],
      "framework_paths": ["${VIVID_ADDONS_DIR}/lib"]
    }
  },

  "dependencies": {
    "external": {
      "syphon": {
        "git": "https://github.com/Syphon/Syphon-Framework.git",
        "description": "Syphon Framework for macOS texture sharing"
      }
    }
  }
}
